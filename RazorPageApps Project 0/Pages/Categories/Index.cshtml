@page
@model RazorPageApps_Project_0.Pages.Categories.IndexModel
@{
}

@*Adding the ability to display all categories from the NameOfTableCategory table in our db*@
<div class="container p-3"> @*adding container where we can add a row*@
    
    @*Creating header section*@
    <div class="row pt-4"> @*adding one row on the complete screen so we can divide it up*@
        
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            @*Create an anchor with tag helper asp-page to allow the button to navigate user*@
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @*Creating table section*@
    <table class="table table-bordered table-striped" style="width:100%">

        @*Table header*@
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Actions
                </th>

            </tr>
        </thead>

        @*Table body*@
        <tbody>
            @*per syntax must use capitalized Model to invoke Line 2 Categories.IndexModel. then set each category inside Model.Categories will have a temp name of obj*@
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td width="50%">@obj.Name</td> @*VALUE OF CATEGORY NAME*@
                    <td width="30%">@obj.DisplayOrder</td> @*VALUE OF DISPLAY ORDER*@
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-route-id="@obj.Id" asp-page="Edit" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-route-id="@obj.Id" asp-page="Delete" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>