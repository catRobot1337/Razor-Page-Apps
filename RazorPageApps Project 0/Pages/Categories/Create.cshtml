@page
@model RazorPageApps_Project_0.Pages.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-bg-primary pl-3">Create a new category</h2>
        <br />
    </div>
    <div class="mb-3">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span> @*Checks for any errors in Category.Name and displays accordingly*@
    </div>
    <div class="mb-3">
        <label asp-for="Category.DisplayOrder"></label>
        <input asp-for="Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span> @*Checks for any errors in Category.DisplayOrder and displays accordingly*@
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
